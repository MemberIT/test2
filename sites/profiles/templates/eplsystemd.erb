[Unit]
Description=epl gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
PIDFile=/run/epl_gunicorn.pid
User=<%= @user %>
Group=<%= @group %>
RuntimeDirectory=gunicorn
WorkingDirectory=<%= @epl_project_path %>/app
ExecStart=/usr/bin/gunicorn --pid /run/epl_gunicorn.pid --bind <%= @epl_address %>:<%= @epl_port %> /etc/gunicorn.d/epl
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
